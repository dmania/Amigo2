<div class = "container">
<h1>Friends and Family</h1>

<table class="table table-striped">
	<thead>
	<tr>
		<th>Name</th>
		<th>Date of Birth</th>
		<th>Phone Number</th>
	<% if user_signed_in? %>
		<th>Edit Friend</th>
		<th>Delete Friend</th>
	<% end %>
	</tr>
	</thead>

<tbody>
<% @friend.each do |friend| %>
	<tr>
		<td><%= friend.friend_name %></td>
		<td><%= friend.friend_birthday %></td>
		<td><%= friend.friend_phone %></td>
	<% if user_signed_in? %>
		<td><%= link_to "Edit", edit_friend_path(friend)%></td>
		<td><%= link_to "Delete", friend_path(friend), :method => :delete, :confirm => 'Are you sure?' %>
	<% end %> 

		<td>
	</tr>
<% end %>
</tbody>

</table>
</div>